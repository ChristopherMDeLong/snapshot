<h2 class="new-restaurant">New Restaurant or Location Form</h2>
<div class="form">
<%= form_for @restaurant do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :address %>
  <%= f.text_field :address %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label :state %>
  <%= f.text_area :state %>

  <%= f.label :zip %>
  <%= f.text_field :zip %>

  <%= f.submit "Add Restaurant or Location" %>

<% end %>
</div>
